{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Instrument",
    "definitions": {"Instrument": {
        "type": "object",
        "properties": {
            "isPartOf": {
                "title": "Has Parent Instruments and Collections",
                "type": "array",
                "items": {
                    "title": "Has Parent Instrument or Collection",
                    "cordra": {"type": {"handleReference": {"types": [
                        "Collection",
                        "Instrument"
                    ]}}}
                }
            },
            "hasPart": {
                "title": "Has Parts",
                "type": "array",
                "items": {
                    "title": "Has Child Part",
                    "cordra": {"type": {"handleReference": {"types": ["Instrument"]}}}
                }
            },
            "address": {
                "type": "string",
                "title": "Physical Address or Building Location",
                "format": "textarea"
            },
            "isBasedOn": {
                "title": "Is Based On",
                "type": "array",
                "uniqueItems": true,
                "items": {
                    "title": "Product",
                    "type": "object",
                    "properties": {
                        "@type": {
                            "type": "string",
                            "default": "Product"
                        },
                        "additionalProperty": {
                            "title": "Additional Properties",
                            "type": "array",
                            "items": {
                                "title": "Additional Property",
                                "type": "object",
                                "properties": {
                                    "@type": {
                                        "type": "string",
                                        "default": "PropertyValue"
                                    },
                                    "propertyID": {
                                        "title": "Property Name",
                                        "type": "string"
                                    },
                                    "value": {
                                        "title": "Property Value",
                                        "type": "string"
                                    },
                                    "unitText": {
                                        "title": "Property Units",
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "manufacturer": {"type": "string"},
                        "brand": {"type": "string"},
                        "model": {"type": "string"},
                        "productID": {"type": "string"},
                        "productionDate": {"type": "string"},
                        "purchaseDate": {"type": "string"},
                        "serialNumber": {"type": "string"}
                    }
                }
            }
        }
    }}
}