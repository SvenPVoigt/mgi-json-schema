{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Process",
    "definitions": {"Process": {
        "type": "object",
        "properties": {
            "@type": {
                "type": "string",
                "default": "HowTo"
            },
            "text": {
                "title": "Process/Step Text",
                "type": "string",
                "format": "textarea"
            },
            "supply": {
                "type": "array",
                "title": "Supply/Starting Materials",
                "uniqueItems": true,
                "items": {
                    "type": "string",
                    "title": "Supply/Starting Material",
                    "cordra": {"type": {"handleReference": {"types": ["Material"]}}}
                }
            },
            "variableMeasured": {
                "type": "array",
                "title": "Variables Measured",
                "uniqueItems": true,
                "items": {
                    "title": "Variable Measured",
                    "$ref": "variableMeasured.json#/definitions/variableMeasured"
                }
            },
            "parameterControlled": {
                "type": "array",
                "title": "Parameters Controlled",
                "uniqueItems": true,
                "items": {
                    "title": "Parameter Controlled",
                    "$ref": "variableMeasured.json#/definitions/variableMeasured"
                }
            },
            "workExample": {
                "type": "array",
                "title": "Resulting Materials",
                "uniqueItems": true,
                "items": {
                    "type": "string",
                    "title": "Resulting Material",
                    "cordra": {"type": {"handleReference": {"types": ["Material"]}}}
                }
            },
            "measurementTechnique": {"$ref": "measurementTechnique.json#/definitions/measurementTechnique"},
            "tool": {
                "type": "array",
                "title": "Tools used to perform the process",
                "uniqueItems": true,
                "items": {
                    "type": "string",
                    "title": "Tools used to perform the process",
                    "cordra": {"type": {"handleReference": {"types": [
                        "DefinedTerm",
                        "Instrument",
                        "SoftwareApplication",
                        "SoftwareSourceCode"
                    ]}}}
                }
            },
            "estimatedCost": {
                "type": "object",
                "title": "MonetaryAmount",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "MonetaryAmount"
                    },
                    "currency": {"type": "string"},
                    "value": {"type": "number"}
                },
                "required": ["@type"]
            },
            "performTime": {"type": "string"},
            "prepTime": {"type": "string"},
            "totalTime": {"type": "string"},
            "yield": {"$ref": "QuantitativeValue.json#/definitions/QuantitativeValue"},
            "position": {
                "title": "Step Number",
                "type": "number"
            },
            "step": {
                "type": "array",
                "title": "Process Steps",
                "uniqueItems": true,
                "items": {
                    "title": "Process Step",
                    "$ref": "#/definitions/Process"
                }
            }
        }
    }}
}