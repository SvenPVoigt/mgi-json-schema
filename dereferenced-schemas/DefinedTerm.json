{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "DefinedTerm",
    "description": "This schema is for describing a Defined Term in Cordra.",
    "properties": {
        "@id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "identifier": {
            "type": "array",
            "title": "Identifers",
            "items": {
                "type": "object",
                "title": "Identifer",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "PropertyValue"
                    },
                    "propertyID": {
                        "title": "Identifier Type",
                        "type": "string"
                    },
                    "value": {
                        "title": "Identifier Value",
                        "type": "string"
                    }
                },
                "required": [
                    "@type"
                ]
            }
        },
        "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternateName": {
            "type": "string",
            "title": "Alternate Name"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea"
        },
        "url": {
            "type": "string",
            "title": "URL"
        },
        "@context": {
            "type": "object",
            "properties": {
                "schema": {
                    "type": "string",
                    "default": "http://schema.org/"
                },
                "skos": {
                    "type": "string",
                    "default": "http://www.w3.org/2004/02/skos/core#"
                },
                "name": {
                    "type": "string",
                    "default": "schema:name"
                },
                "alternateName": {
                    "type": "string",
                    "default": "schema:alternateName"
                },
                "description": {
                    "type": "string",
                    "default": "schema:description"
                },
                "url": {
                    "type": "string",
                    "default": "schema:url"
                },
                "broader": {
                    "type": "string",
                    "default": "skos:broader"
                },
                "narrower": {
                    "type": "string",
                    "default": "skos:narrower"
                },
                "related": {
                    "type": "string",
                    "default": "skos:related"
                },
                "exactMatch": {
                    "type": "string",
                    "default": "skos:exactMatch"
                },
                "closeMatch": {
                    "type": "string",
                    "default": "skos:closeMatch"
                }
            }
        },
        "@type": {
            "type": "string",
            "default": "schema:DefinedTerm"
        },
        "termCode": {
            "type": "string",
            "title": "Term Code"
        },
        "inDefinedTermSet": {
            "type": "array",
            "title": "In Defined Term Sets",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "In Defined Term Set",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTermSet"
                            ]
                        }
                    }
                }
            }
        },
        "broader": {
            "type": "array",
            "title": "Broader Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Broader Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "narrower": {
            "type": "array",
            "title": "Narrower Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Narrower Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "related": {
            "type": "array",
            "title": "Related Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Related Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "exactMatch": {
            "type": "array",
            "title": "Exactly Matching Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Exactly Matching Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "closeMatch": {
            "type": "array",
            "title": "Closely Matching Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Closely Matching Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        }
    }
}