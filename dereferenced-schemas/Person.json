{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Person",
    "description": "This schema is for describing a Person in Cordra.",
    "allOf": [
        {
            "type": "object",
            "properties": {
                "@id": {
                    "type": "string",
                    "cordra": {
                        "type": {
                            "autoGeneratedField": "handle"
                        }
                    }
                }
            }
        },
        {
            "type": "object",
            "properties": {
                "identifier": {
                    "type": "array",
                    "title": "Identifers",
                    "items": {
                        "type": "object",
                        "title": "Identifer",
                        "properties": {
                            "@type": {
                                "type": "string",
                                "default": "PropertyValue"
                            },
                            "propertyID": {
                                "title": "Identifier Type",
                                "type": "string"
                            },
                            "value": {
                                "title": "Identifier Value",
                                "type": "string"
                            }
                        },
                        "required": [
                            "@type"
                        ]
                    }
                },
                "name": {
                    "type": "string",
                    "title": "Name",
                    "cordra": {
                        "preview": {
                            "showInPreview": true,
                            "isPrimary": true
                        }
                    }
                },
                "alternateName": {
                    "type": "string",
                    "title": "Alternate Name"
                },
                "description": {
                    "type": "string",
                    "title": "Description",
                    "format": "textarea"
                },
                "url": {
                    "type": "string",
                    "title": "URL"
                }
            }
        },
        {
            "type": "object",
            "properties": {
                "@context": {
                    "type": "string",
                    "default": "http://schema.org/"
                },
                "@type": {
                    "type": "string",
                    "default": "Person"
                },
                "familyName": {
                    "type": "string",
                    "title": "Family Name"
                },
                "givenName": {
                    "type": "string",
                    "title": "Given Name"
                },
                "additionalName": {
                    "type": "string",
                    "title": "Middle Name(s)"
                },
                "email": {
                    "type": "string",
                    "title": "E-Mail Address",
                    "cordra": {
                        "preview": {
                            "showInPreview": true,
                            "isPrimary": true
                        }
                    }
                },
                "telephone": {
                    "type": "string",
                    "title": "Telephone"
                },
                "address": {
                    "type": "string",
                    "title": "Physical Address",
                    "format": "textarea"
                },
                "affiliation": {
                    "type": "array",
                    "title": "Affiliations",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "title": "Affiliation",
                        "cordra": {
                            "type": {
                                "handleReference": {
                                    "types": [
                                        "Organization"
                                    ]
                                }
                            }
                        }
                    }
                }
            },
            "required": [
                "@type"
            ]
        }
    ]
}