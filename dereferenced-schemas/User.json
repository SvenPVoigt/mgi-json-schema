{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Person",
    "description": "This schema is for describing a registered User in Cordra.",
    "required": [
        "@id",
        "@context",
        "@type",
        "username",
        "password"
    ],
    "properties": {
        "@context": {
            "type": "string",
            "default": "http://schema.org/"
        },
        "@type": {
            "type": "string",
            "default": "Person"
        },
        "@id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "username": {
            "type": "string",
            "title": "Username",
            "cordra": {
                "preview": {
                    "showInPreview": true
                },
                "auth": "username"
            }
        },
        "password": {
            "type": "string",
            "format": "password",
            "title": "Password",
            "cordra": {
                "auth": "password"
            }
        },
        "requirePasswordChange": {
            "type": "boolean",
            "title": "Require Password Change",
            "description": "If true a new password must be set on next authentication.",
            "cordra": {
                "auth": "requirePasswordChange"
            }
        },
        "publicKey": {
            "type": "object",
            "cordra": {
                "auth": "publicKey"
            }
        },
        "identifier": {
            "type": "array",
            "title": "Identifers",
            "items": {
                "type": "object",
                "title": "Identifer",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "PropertyValue"
                    },
                    "propertyID": {
                        "title": "Property IDs",
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "title": "Property ID",
                            "type": "string",
                            "cordra": {
                                "type": {
                                    "handleReference": {
                                        "types": [
                                            "DefinedTerm"
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "name": {
                        "title": "Identifier Type/Name",
                        "type": "string"
                    },
                    "value": {
                        "title": "Identifier Value"
                    },
                    "url": {
                        "title": "Identifier URL",
                        "type": "string"
                    }
                }
            }
        },
        "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternateName": {
            "type": "string",
            "title": "Alternate Name",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "url": {
            "type": "string",
            "title": "URL"
        },
        "image": {
            "type": "array",
            "title": "Image URLs",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Image URL"
            }
        },
        "subjectOf": {
            "type": "array",
            "title": "Subject Of",
            "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Referenced Item",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": []
                        }
                    }
                }
            }
        },
        "potentialAction": {
            "type": "object",
            "description": "A method that this object can execute. A simple call method would allow this object to be callable in some interpreted languages and act like a function.",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the method to be called"
                },
                "language": {
                    "type": "string",
                    "description": "the language the code is to be executed in."
                },
                "code": {
                    "type": "string",
                    "description": "A string representation of the code"
                },
                "codePayloadName": {
                    "type": "string",
                    "description": "If code is attached as a payload, then this specifies the codes name."
                }
            }
        },
        "familyName": {
            "type": "string",
            "title": "Family Name"
        },
        "givenName": {
            "type": "string",
            "title": "Given Name"
        },
        "additionalName": {
            "type": "string",
            "title": "Middle Name(s)"
        },
        "email": {
            "type": "string",
            "title": "E-Mail Address",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "telephone": {
            "type": "string",
            "title": "Telephone"
        },
        "address": {
            "type": "string",
            "title": "Physical Address",
            "format": "textarea"
        },
        "affiliation": {
            "type": "array",
            "title": "Affiliations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Affiliation",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "workLocation": {
            "type": "array",
            "title": "Work Location",
            "description": "A location where a person performs work (e.g., office, laboratory).",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Place",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Place"
                            ]
                        }
                    }
                }
            }
        }
    }
}